
<%= simple_form_for(@expression) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :sentence %>
    <%= f.input :definition %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
